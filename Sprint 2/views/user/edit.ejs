<!DOCTYPE html>
<html>

<head>
  <%-include ('.././partials/head')%>
</head>

<body>
  <%-include ('.././partials/header')%>

 <section class= "Form-Container m-5">
  <h2>Editar perfil</h2>
  <form class="row g-3" action="/usarios/edit/<%=usuarioEditable.id%>?_method=PUT" method="POST">
      <div class="col-md-6">
        <label for="nombre" class="form-label">Nombre</label>
        <input value="<%=usuarioEditable.nombre%>" type="text" class="form-control" name="nombre" id="nombre"> </input> 
      </div>
      <div class="col-md-6">
        <label for="apellido" class="form-label">apellido</label>
        <textarea class="form-control" name="apellido" id="apellido"> <%=usuarioEditable.apellido%> </textarea>
      </div>
      <div class="col-md-6">
        <label for="email" class="form-label">email</label>
        <textarea class="form-control" name="email" id="email"> <%=usuarioEditable.email%> </textarea>
      </div>
      <div class="col-12">
        <label for="contraseña" class="form-label">contraseña</label>
        <input value="<%=usuarioEditable.contraseña%>" class="form-control" name="contraseña" id="contraseña"> </input>
      </div>
      <div class="col-md-6">
        <label for="telefono" class="form-label">telefono</label>
        <textarea class="form-control" name="telefono" id="telefono"> <%=usuarioEditable.telefono%></textarea>
      </div>
      <div class="col-12">
        <button type="submit" class="button-detail">Guardar</button>
      </div>
    </form>
</section>

  <%-include ('.././partials/footer')%>
</body>
</html>